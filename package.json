{
  "name": "easy-meal",
  "private": true,
  "workspaces": ["packages/*"],
  "scripts": {
    "dev": "bun run --parallel dev:web dev:api",
    "dev:web": "bun run --cwd packages/web dev",
    "dev:api": "bun run --cwd packages/api dev",
    "db:up": "docker compose up -d postgres",
    "db:down": "docker compose down",
    "db:push": "bun run --cwd packages/api db:push",
    "db:generate": "bun run --cwd packages/api db:generate",
    "db:migrate": "bun run --cwd packages/api db:migrate",
    "db:studio": "bun run --cwd packages/api db:studio",
    "db:reset": "bun run db:down && bun run db:up && sleep 3 && bun run db:push",
    "lint": "eslint packages/*/src",
    "format": "prettier --write \"packages/*/src/**/*.{ts,tsx}\"",
    "typecheck": "tsc --build",
    "test": "bun test packages/api/src"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "prettier": "^3.2.0",
    "typescript": "^5.4.0"
  }
}
